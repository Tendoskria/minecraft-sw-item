<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <header>
      <h1>Item event SW</h1>
      <a href="/admin" class="btn-admin">Ajouter Item, Enchantement</a>
    </header>

    <nav class="breadcrumb">
      <a href="/">Accueil</a> / 
      <a href="/event/<%= item.event_name %>/<%= item.year %>"><%= item.event_name %> <%= item.year %></a> / <%= item.name %>
    </nav>

    <div class="item-details">
      <h2><%= item.name %></h2>

      <div class="detail-section">
        <p><strong>Event :</strong> <%= item.event_name %> <%= item.year %></p>
      </div>

      <div class="detail-section">
        <p><strong>Nom :</strong> <%= item.name %></p>
      </div>

      <% if (item.enchantments && item.enchantments.length > 0) { %>
        <div class="detail-section">
          <p><strong>Echantements :</strong></p>
          <ul class="enchantments-list">
            <% item.enchantments.forEach(ench => { %>
              <li>
                <%= ench.name %><%= ench.level ? ' ' + ench.level : '' %>
              </li>
            <% }); %>
          </ul>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>